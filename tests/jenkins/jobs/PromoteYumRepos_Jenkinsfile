lib = library(identifier: 'jenkins@1.0.0', retriever: modernSCM([
    $class: 'GitSCMSource',
    remote: 'https://github.com/opensearch-project/opensearch-build-libraries.git',
]))

pipeline {
    agent none
    stages {
        stage('promote') {
            steps {
                script {
                    promoteYumRepos(
                        buildNumber: "123",
                        jobName: "opensearch",
                        manifest: "tests/jenkins/data/opensearch-1.3.0.yml"
                    )
                }
            }
        }
    }
}
