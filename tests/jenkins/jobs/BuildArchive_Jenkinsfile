lib = library(identifier: 'jenkins@1.0.0', retriever: modernSCM([
    $class: 'GitSCMSource',
    remote: 'https://github.com/opensearch-project/opensearch-build-libraries.git',
]))

pipeline {
    agent none
    stages {
        stage('build and archive') {
            steps {
                script {
                    buildArchive(
                        inputManifest: 'tests/jenkins/data/opensearch-1.3.0.yml',
                        platform: 'linux',
                        architecture: 'x64',
                        distribution: 'tar',
                        stashName: 'test-stash-tar'
                    )
                }
            }
        }
    }
}
