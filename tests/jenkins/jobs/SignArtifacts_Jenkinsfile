lib = library(identifier: 'jenkins@1.0.0', retriever: modernSCM([
    $class: 'GitSCMSource',
    remote: 'https://github.com/opensearch-project/opensearch-build-libraries.git',
]))

pipeline {
    agent none
    stages {
        stage('sign') {
            steps {
                script {
                    signArtifacts(
                            artifactPath: "${WORKSPACE}/artifacts",
                            sigtype: '.sig',
                            platform: 'linux'
                    )

                    signArtifacts(
                            artifactPath: "${WORKSPACE}/artifacts",
                            sigtype: '.rpm',
                            platform: 'linux'
                    )

                    signArtifacts(
                            artifactPath: "${WORKSPACE}/file.yml",
                            platform: 'linux',
                            type: 'maven'
                    )
                }
            }
        }
    }
}
