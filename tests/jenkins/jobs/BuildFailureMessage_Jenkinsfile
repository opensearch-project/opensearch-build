lib = library(identifier: 'jenkins@1.0.0', retriever: modernSCM([
    $class: 'GitSCMSource',
    remote: 'https://github.com/opensearch-project/opensearch-build-libraries.git',
]))

pipeline {
    agent none
    stages {
        stage('notify') {
            steps {
                script {
                    try {
                        buildFailureMessage()
                        currentBuild.result = 'SUCCESS'
                    } catch (Exception err) {
//https://github.com/jenkinsci/JenkinsPipelineUnit/issues/509
                        currentBuild.result = 'SUCCESS'
                    }
                }
            }
        }
    }
}

