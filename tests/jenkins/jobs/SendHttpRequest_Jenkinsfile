pipeline {
    agent none
    stages {
        stage('http request') {
            steps {
                script {
                    test_payload = [
                        "name": "John",
                        "age": "1"
                    ]
                    sendHttpRequest(
                        test_payload,
                        'https://example.com',
                        'POST',
                        'APPLICATION_JSON',
                        '200',
                        true
                    )
                }
            }
        }
    }
}
