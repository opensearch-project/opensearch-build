lib = library(identifier: 'jenkins@main', retriever: modernSCM([
    $class: 'GitSCMSource',
    remote: 'https://github.com/jordarlu/opensearch-build-libraries.git',
]))

pipeline {
    agent none
    parameters {
        string(
            name: 'VERSION',
            description: 'VERSION NUMBER',
            trim: true,
            defaultValue: "1.3.8"
        )
        string(
            name: 'DISTRIBUTION',
            description: 'Enter the distribution type among [tar,rpm,yum,docker] default is set to Tarball',
            trim: true,
            defaultValue: "docker"
        )
        string(
            name: 'ARCHITECTURE',
            description: 'Enter the distribution type among [tar,rpm,yum,docker] default is set to Tarball',
            trim: true,
            defaultValue: "x64"
        )
    }

    stages {
        stage('validate') {
            agent {
                label 'Jenkins-Agent-AL2-X64-C54xlarge-Single-Host'
            }
            steps {
                script {
                    if (VERSION == '') {
                        currentBuild.result = 'ABORTED'
                        error('Provide version number for the artifacts')
                    }
                    sh """
                        docker ps -a
                        netstat -ntlp
                    """
                    validateArtifacts(
                            version: "$VERSION",
                            distribution: "$DISTRIBUTION",
                            architecture: "$ARCHITECTURE"
                    )
                }
            }
            post() {
                always {
                    script {
                        postCleanup()
                    }
                }
            }
        }
    }
}
